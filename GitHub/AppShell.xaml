<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GitHub.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GitHub"
    Shell.FlyoutBehavior="Disabled"
    Title="GitHub">

    <ShellContent Title="Música"
              ContentTemplate="{DataTemplate local:Musica}" 
              Route="Musica" />

    <!-- Pantalla inicial: Videojuegos -->
    <ShellContent
        Title="Videojuegos"
        ContentTemplate="{DataTemplate local:VideojuegosPage}"
        Route="VideojuegosPage"
        Icon="gamepad.png" />

    <!-- TabBar opcional para futuras vistas -->
    <TabBar>
        <!--<Tab Title="Películas" Icon="film.png">
            <ShellContent ContentTemplate="{DataTemplate local:PeliculasPage}" />
        </Tab>
        <Tab Title="Música" Icon="music.png">
            <ShellContent ContentTemplate="{DataTemplate local:MusicaPage}" />
        </Tab>-->
    </TabBar>
</Shell>
