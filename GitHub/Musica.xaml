<?xml version="1.0" encoding="utf-8" ?>
<!-- Página de contenido que representa una sección dedicada al mundo de la música -->
<ContentPage
    x:Class="GitHub.Musica"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Música"
    BackgroundColor="SteelBlue">
    <!-- David Peña Santos -->
    <!-- Scroll principal para permitir desplazamiento vertical -->
    <ScrollView>
        <!-- Contenedor vertical principal con padding y separación entre elementos -->
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Título principal de la página -->
            <Label Text="Explora el mundo de la música"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Sección: Conciertos -->
            <Label Text="🎤 Conciertos" FontSize="22" FontAttributes="Bold"/>
            <!-- Fila de tarjetas horizontales centradas para conciertos -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <!-- Tarjeta 1: Coldplay -->
                <Frame WidthRequest="200" BackgroundColor="#e0f7fa" CornerRadius="15" Padding="10">
                    <VerticalStackLayout>
                        <Image Source="concierto1.jpeg" HeightRequest="100"/>
                        <Label Text="Coldplay" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Luces y emoción." FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>
                <!-- Tarjeta 2: The Weeknd -->
                <Frame WidthRequest="200" BackgroundColor="#e0f7fa" CornerRadius="15" Padding="10">
                    <VerticalStackLayout>
                        <Image Source="concierto2.jpg" HeightRequest="100"/>
                        <Label Text="The Weeknd" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Experiencia envolvente." FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>
                <!-- Tarjeta 3: Adele -->
                <Frame WidthRequest="200" BackgroundColor="#e0f7fa" CornerRadius="15" Padding="10">
                    <VerticalStackLayout>
                        <Image Source="concierto3.jpg" HeightRequest="100"/>
                        <Label Text="Adele Live" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Baladas conmovedoras." FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>
            </HorizontalStackLayout>

            <!-- Sección: Festivales -->
            <Label Text="🎉 Festivales" FontSize="22" FontAttributes="Bold"/>
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <!-- Tarjeta 1: Vive Latino -->
                <Frame WidthRequest="200" BackgroundColor="#ffe0b2" CornerRadius="15" Padding="10">
                    <VerticalStackLayout>
                        <Image Source="festival1.jpg" HeightRequest="100"/>
                        <Label Text="Vive Latino" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black" />
                        <Label Text="Artistas latinos." FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>
                <!-- Tarjeta 2: Tomorrowland -->
                <Frame WidthRequest="200" BackgroundColor="#ffe0b2" CornerRadius="15" Padding="10">
                    <VerticalStackLayout>
                        <Image Source="festival2.jpg" HeightRequest="100"/>
                        <Label Text="Tomorrowland" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Escenografía épica." FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>
                <!-- Tarjeta 3: Coachella -->
                <Frame WidthRequest="200" BackgroundColor="#ffe0b2" CornerRadius="15" Padding="10">
                    <VerticalStackLayout>
                        <Image Source="festival3.jpg" HeightRequest="100"/>
                        <Label Text="Coachella" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Moda y música." FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>
            </HorizontalStackLayout>

            <!-- Sección: Plataformas de Música -->
            <Label Text="🎧 Plataformas de Música" FontSize="22" FontAttributes="Bold"/>
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <!-- Tarjeta 1: Spotify -->
                <Frame WidthRequest="200" BackgroundColor="#f3e5f5" CornerRadius="15" Padding="10">
                    <VerticalStackLayout>
                        <Image Source="spotify.jpg" HeightRequest="100"/>
                        <Label Text="Spotify" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Millones de canciones." FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>
                <!-- Tarjeta 2: YouTube Music -->
                <Frame WidthRequest="200" BackgroundColor="#f3e5f5" CornerRadius="15" Padding="10">
                    <VerticalStackLayout>
                        <Image Source="ytmusic.png" HeightRequest="100"/>
                        <Label Text="YouTube Music" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Listas inteligentes." FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>
                <!-- Tarjeta 3: Apple Music -->
                <Frame WidthRequest="200" BackgroundColor="#f3e5f5" CornerRadius="15" Padding="10">
                    <VerticalStackLayout>
                        <Image Source="applemusic.png" HeightRequest="100"/>
                        <Label Text="Apple Music" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Alta calidad." FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>
            </HorizontalStackLayout>

            <!-- Sección: Creación Musical -->
            <Label Text="🎹 Creación Musical" FontSize="22" FontAttributes="Bold"/>
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <!-- Tarjeta 1: Estudio en casa -->
                <Frame WidthRequest="200" BackgroundColor="#c8e6c9" CornerRadius="15" Padding="10">
                    <VerticalStackLayout>
                        <Image Source="studio1.jpeg" HeightRequest="100"/>
                        <Label Text="Estudio en casa" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Graba desde casa." FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>
                <!-- Tarjeta 2: DJ Digital -->
                <Frame WidthRequest="200" BackgroundColor="#c8e6c9" CornerRadius="15" Padding="10">
                    <VerticalStackLayout>
                        <Image Source="dj.jpg" HeightRequest="100"/>
                        <Label Text="DJ Digital" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Apps móviles." FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>
                <!-- Tarjeta 3: Producción instrumental -->
                <Frame WidthRequest="200" BackgroundColor="#c8e6c9" CornerRadius="15" Padding="10">
                    <VerticalStackLayout>
                        <Image Source="musical.png" HeightRequest="100"/>
                        <Label Text="Instrumental" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
                        <Label Text="Reales y virtuales." FontSize="12" HorizontalOptions="Center" TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>