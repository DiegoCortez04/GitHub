<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="GitHub.VideojuegosPage"  
             Title="Explorador Gamer"  
             BackgroundColor="#1e1e2f">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="🎮 Videojuegos" FontSize="32" TextColor="White" FontAttributes="Bold"/>

            <!-- Categoría: Consolas -->
            <Label Text="🕹 Consolas" FontSize="24" TextColor="White" />
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="15">
                    <Frame StyleClass="card" BackgroundColor="#2b2b3d">
                        <VerticalStackLayout>
                            <Image Source="zelda.jpg" HeightRequest="100"/>
                            <Label Text="The Legend of Zelda" TextColor="White" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame StyleClass="card" BackgroundColor="#2b2b3d">
                        <VerticalStackLayout>
                            <Image Source="godofwar.jpg" HeightRequest="100"/>
                            <Label Text="God of War" TextColor="White" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- Categoría: PC -->
            <Label Text="🖥 PC" FontSize="24" TextColor="White" />
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="15">
                    <Frame StyleClass="card" BackgroundColor="#2b2b3d">
                        <VerticalStackLayout>
                            <Image Source="cyberpunk.jpg" HeightRequest="100"/>
                            <Label Text="Cyberpunk 2077" TextColor="White" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame StyleClass="card" BackgroundColor="#2b2b3d">
                        <VerticalStackLayout>
                            <Image Source="valorant.jpg" HeightRequest="100"/>
                            <Label Text="Valorant" TextColor="White" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- Categoría: Móviles -->
            <Label Text="📱 Móviles" FontSize="24" TextColor="White" />
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="15">
                    <Frame StyleClass="card" BackgroundColor="#2b2b3d">
                        <VerticalStackLayout>
                            <Image Source="clashroyale.jpg" HeightRequest="100"/>
                            <Label Text="Clash Royale" TextColor="White" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame StyleClass="card" BackgroundColor="#2b2b3d">
                        <VerticalStackLayout>
                            <Image Source="codmobile.jpg" HeightRequest="100"/>
                            <Label Text="COD Mobile" TextColor="White" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- Categoría: Realidad Virtual -->
            <Label Text="🧠 VR" FontSize="24" TextColor="White" />
            <Label Text="Beat Saber, Half-Life: Alyx, Superhot VR..." TextColor="Gray"/>

            <!-- Categoría: eSports -->
            <Label Text="🏆 eSports" FontSize="24" TextColor="White" />
            <Label Text="League of Legends, Dota 2, CS:GO, Fortnite..." TextColor="Gray"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
